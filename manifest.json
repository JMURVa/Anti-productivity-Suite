{
  "manifest_version": 3,
  "name": "Anti-Productivity Suite",
  "version": "1.0.0",
  "description": "A delightfully disruptive Chrome extension that embraces distraction.",
  "permissions": [
    "bookmarks",
    "contextMenus",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Anti-Productivity Suite"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  }
}
